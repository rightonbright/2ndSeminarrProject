                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/pic1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
